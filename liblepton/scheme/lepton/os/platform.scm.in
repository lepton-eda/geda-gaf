(define-module (lepton os platform)
  #:use-module (srfi srfi-1)

  #:export (platform))

;;; The values here are defined in m4 files.
(define platform-list
  `((cygwin . ,(string-contains %host-type "cygwin"))
    (linux . ,(string-contains %host-type "linux"))
    (win32 . ,(or (string-contains %host-type "cygwin")
                  (string-contains %host-type "mingw")))
    (win32-native . ,(string-contains %host-type "mingw"))))

(define (platform)
  "Return a list of symbols describing the host operating system.
The symbols may include:
- 'win32 -- Windows
- 'win32-native -- Windows, not via Cygwin
- 'cygwin -- Cygwin
- 'linux -- Linux"
  (define platform-name car)
  (define m4-value cdr)

  (define (enabled? x)
    (and (string= (m4-value x) "yes")
         (platform-name x)))

  (filter-map enabled? platform-list))
